<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>
        <h2>This is our Home Page!</h2>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="userInput">Name</label>
            <input type="text" id="name" class="form-control" aria-describedby="name" placeholder="">
          </div>
          <div class="form-group">
            <label for="state">Destination</label>
              <select class="custom-select" id="destination" name="destination">
                <option value=""></option>
                <option value="" data-airport="LHR" data-dest-id="-2601889">London</option>
                <option value="" data-airport="JFK" data-dest-id="20088325">New York</option>
                <option value="" data-airport="CDG" data-dest-id="-1456928">Paris</option>
                <option value="" data-airport="SYD" data-dest-id="-1603135">Sydney</option>
              </select>
          </div>
          <div class="form-group">
            <label for="userInput">Departure Date</label>
            <input type="date" id="departure" class="form-control" aria-describedby="departure"
              placeholder="YYYY-MM-DD">
          </div>
          <div class="form-group">
            <label for="userInput">Return Date</label>
            <input type="date" id="return" class="form-control" aria-describedby="departure" placeholder="YYYY-MM-DD">
          </div>
          <button type="submit" class="btn btn-primary float-right submit">Submit</button>
        </form>
        
        <h3>Trips:</h3>
        <ul id="example-list" class="list-group">
          {{#each booking}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="example/{{this.id}}">{{this.text}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

